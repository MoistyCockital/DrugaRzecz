<Window x:Class="DrugaRzecz.WindowKwadrat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrugaRzecz"
        mc:Ignorable="d"
        Title="WindowKwadrat" Height="400" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock>Podaj bok kwadratu</TextBlock>
        <TextBlock Grid.Row="1">Obwód wynosi</TextBlock>
        <TextBlock Grid.Row="2">Pole wynosi</TextBlock>
        <TextBox Grid.Column="1" x:Name="bok"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="1" x:Name="obwod" IsEnabled="False"/>
        <TextBox Grid.Column="1" Grid.Row="2" x:Name="pole" IsEnabled="False"/>
        <Button Grid.Row="3" Grid.ColumnSpan="3" Click="Oblicz_Click">Oblicz</Button>
        <TextBlock x:Name="Komunikat" Grid.Column="2" Foreground="IndianRed"></TextBlock>
    </Grid>
</Window>
