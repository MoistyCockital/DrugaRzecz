<Window x:Class="DrugaRzecz.ObliczeniaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrugaRzecz"
        mc:Ignorable="d"
        Title="ObliczeniaWindow" Height="410" Width="320">
    <Grid Background="#5d5c70">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Podaj liczbe 1" Foreground="#cfcede" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Text="Podaj liczbe 2" Grid.Row="1" Foreground="#cfcede" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox Grid.Column="1" x:Name="Liczba1" VerticalAlignment="Center" Background="#64637a" Margin="10" Foreground="#cfcede"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="Liczba2" VerticalAlignment="Center" Background="#64637a" Margin="10" Foreground="#cfcede"/>
        <Button Grid.Row="2" Content="Oblicz" Grid.ColumnSpan="2" Background="#64637a" Margin="10" Foreground="#cfcede" Click="Oblicz_Click"/>
    </Grid>
</Window>
